<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="10dp"
    android:layout_height="match_parent"
    android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:id="@+id/image_serv_list"
                android:scaleType="centerCrop"
                android:tint="@color/photo_tint"
                android:layout_alignParentTop="true"                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:background="?android:selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textIsSelectable="true"
                android:tint="@color/photo_tint"
                android:backgroundTint="@color/photo_tint"
                android:layout_marginTop="105dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/text_serv_title"
                android:textColor="#ffffff"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignBottom="@+id/image_serv_list" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/text_serv_desc"
                android:focusable="true"
                android:textSize="18sp"
                android:clickable="true"
                android:layout_below="@+id/image_serv_list"
                android:layout_alignStart="@+id/text_serv_title"
                android:layout_alignEnd="@+id/text_serv_title"
                android:layout_alignParentBottom="false"

                android:background="#ffffff"
                android:textColor="#000000"/>

        </RelativeLayout>


       </android.support.v7.widget.CardView>
