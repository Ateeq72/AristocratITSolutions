<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app.aristocratitsolutions.contactUS"
    tools:showIn="@layout/activity_contact_us"    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:src="@drawable/com_logo"
            android:scaleType="fitCenter"
            android:id="@+id/image__"      />

    <android.support.v7.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:elevation="4dp"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardCornerRadius="5dp"

            >

        <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Aristocrat IT Solutions"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
            android:id="@+id/name" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:text="Email : aristocratresearch@gmail.com \n Phone No. : 7200001234 \n Visit us @ www.aristocratitsolutions.com"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textIsSelectable="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/name"
            android:textColor="#a29c9c"
            android:autoLink="web|phone|email"
            />


    </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
