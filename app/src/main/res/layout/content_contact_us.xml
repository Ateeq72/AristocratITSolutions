<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app.aristocratitsolutions.contactUS"
    tools:showIn="@layout/activity_contact_us">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:elevation="4dp"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardCornerRadius="5dp"
            android:layout_marginTop="135dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher"
            android:scaleType="centerInside"
            android:tint="@color/photo_tint"
            android:layout_centerInParent="true"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Aristocrat IT Solutions"
        android:layout_centerInParent="true"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textIsSelectable="true"         />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="?android:selectableItemBackground"
            android:text="Email : aristocratresearch@gmail.com \n Phone No. : 7200001234 \n Visit us @ www.aristocratitsolutions.com"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textIsSelectable="true"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"/>



    </android.support.v7.widget.CardView>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
